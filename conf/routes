# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                                                                           controllers.Application.index
HEAD   /                                                                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path

GET    /favicon.ico                                                                controllers.Assets.at(path="/public", file="favicon.ico")
HEAD   /favicon.ico                                                                controllers.Assets.at(path="/public", file="favicon.ico")

GET    /assets/*file                                                               controllers.Assets.at(path="/public", file)
HEAD   /assets/*file                                                               controllers.Assets.at(path="/public", file)

GET    /webindex/compare                                                           controllers.Application.preCompare(mode="webindex")
HEAD   /webindex/compare                                                           controllers.Application.preCompare(mode="webindex")

GET    /webindex/compare/COUNTRY(:countries)/YEAR(:years)/INDICATOR(:indicators)   controllers.Application.compare(mode="webindex", countries, years, indicators)
HEAD   /webindex/compare/COUNTRY(:countries)/YEAR(:years)/INDICATOR(:indicators)   controllers.Application.compare(mode="webindex", countries, years, indicators)

GET    /odb/compare                                                                controllers.Application.preCompare(mode="odb")
HEAD   /odb/compare                                                                controllers.Application.preCompare(mode="odb")

GET    /odb/compare/COUNTRY(:countries)/YEAR(:years)/INDICATOR(:indicators)        controllers.Application.compare(mode="odb", countries, years, indicators)
HEAD   /odb/compare/COUNTRY(:countries)/YEAR(:years)/INDICATOR(:indicators)        controllers.Application.compare(mode="odb", countries, years,  indicators)

GET    /*path                                                                      controllers.Application.fallback(path: String)
HEAD   /*path                                                                      controllers.Application.fallback(path: String)